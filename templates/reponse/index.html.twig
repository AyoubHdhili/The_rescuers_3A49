{% extends 'BackOffice.html.twig' %}

{% block title %}Reponse index{% endblock %}

{% block body %}
    <h1>Reponse index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>NumReponse</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reponse in reponses %}
            <tr>
                <td>{{ reponse.numReponse }}</td>
                <td>{{ reponse.description }}</td>
                <td>
                    <a href="{{ path('app_reponse_show', {'numReponse': reponse.numReponse}) }}">show</a>
                    <a href="{{ path('app_reponse_edit', {'numReponse': reponse.numReponse}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reponse_new') }}">Create new</a>
{% endblock %}
